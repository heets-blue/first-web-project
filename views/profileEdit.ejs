<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Meer</title>
    
    <link rel="stylesheet" href="/css/meer.css" type="text/css">
    
    </head>
    <body>
        <header>
            <div class="mainBarBg">
              
              <span class = 'mainHomeButton' type = "button" onclick="location.href='/'">
                <img class="mainLogo" src="/img/mainLogo.png" alt="MainLogo">
                <span class="Meer">
                  Meer
                </span>
              </span>
              <script>
                function menuCilck_About()
                {
                    location.href='/#aboutBlock'
                }
      
                function menuCilck_Contact()
                {
                    location.href='/#contactBlock'
                }
                
              </script>
              <button type = 'button' class="About" onclick="menuCilck_About()">
                About
              </button>
              <button type="button" class="Contact" onclick="menuCilck_Contact()">
                Contact
              </button>
              <button type="button" class="Community">
                Community
              </button>
              <button type="button" class="My-Workout" onclick="location.href='/workout/<%=-id%>'" >
                My Workout
              </button>
               
              <script type="text/javascript">
                function login() {
                  location.href = '/login';
                }
      
                function logout() {
                  location.href = '/logout';
                }

                function editProfile() {
                  location.href = '/profile/edit/<%id%>'
                }

                function preview(input) {
                  if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                      document.getElementById('profileImg').src = e.target.result;
                    };
                    reader.readAsDataURL(input.files[0]);
                  } else {
                    document.getElementById('profileImg').src = "";
                  }
                }
              </script>

              <% var logined %> 
              <% var id %> 
              <% if (logined == 'y'){%>
              <img class="profile_logo" type="button" src="<%=image%>" alt="profile" onclick="location.href = '/profile/<%=id%>'">
              <button type="button" class="loginButton" onclick=logout()>Logout</button>
              <% } else {%> 
              <button type="button" class="loginButton" onclick=login()>Login</button>
              <% } %> 
            </div>
        </header>
        <div class="profileFrame">          
            <span class="profileTitle">
                Editing <%= username %>'s Profile
            </span>
            <div class="profileBox">
                <form method="post" onkeydown="return event.key != 'Enter';" enctype="multipart/form-data">
                <img class="profileImg" class="profileImg" src="<%=image%>" id="profileImg">
                <div class="image-upload-div">
                  <label type="button" for="image-input">
                    <img src="/img/camera.png" class="image-upload">
                  </label>
                  <input type="file" name="image" onchange="preview(this)" class="image-input" id="image-input" style="display: none;">
                </div>
                
                <span class="profileEditInputs username"><%=username%></span>
                <span class="profileEditInputs email"><%=email%></span>
                <input type="text" class="profileEditInputs profileMessage" name="proMesEdit" value="Your Profile Message">
                <textarea class="profileDescription" rows="5" placeholder="Describe yourself here" name ="description" maxlength="200"><%=description%></textarea>
            </div>

            <div class="profileDetailBox profileDetailBoxTop">
              <span class="detailInfoTop detailInfoTop_Fullname">
                Full Name
                <input class="userDetailInputs userDetailInputsLoc" type="text" name="fullname" value="<%=fullname%>">
              </span>
              <div class="profileInfoLine profileInfoLine_loc1"></div>
              <span class="detailInfoTop detailInfoTop_Email">
                Email
                <input class="userDetailInputs userDetailInputsLoc" type="text" value="<%=email%>" name="email">
              </span>
              <div class="profileInfoLine profileInfoLine_loc2"></div>
              <span class="detailInfoTop detailInfoTop_Username">
                Username
                <input class="userDetailInputs userDetailInputsLoc" value="<%=username%>" type="text" name="username">
              </span>
              <div class="profileInfoLine profileInfoLine_loc3"></div>
              <span class="detailInfoTop detailInfoTop_Mobile">
                Mobile
                <input class="userDetailInputs userDetailInputsLoc" value="<%=mobile%>" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" type="text" name="mobile">
              </span>
              <div class="profileInfoLine profileInfoLine_loc4"></div>
              <address class="detailInfoTop detailInfoTop_Address">
                Address
                <input class="userDetailInputs userDetailInputsLoc" type="text" value="<%=address%>" name="address">
              </address>
              <div class="profileInfoLine profileInfoLine_loc5"></div>
              <span class="detailInfoTop detailInfoTop_Height">
                Height
                <input class="userDetailInputs userDetailInputsLoc" value="<%=height%>" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" type="text" name="height">
              </span>
              <span class="detailInfoTop detailInfoTop_Weight">
                Weight
                <input class="userDetailInputs userDetailInputsLoc" value="<%=weight%>" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" type="text" name="weight">
              </span>
              <button type="submit" class="profileEdit">Done</button>
            </form>
            </div>
            <div class="profileDetailBox profileDetailBoxLeft">
              <span class="profileBigText recentPosts-pos">
                <span class="text-style-1"><%=username%>'s</span>
                <span class="text-style-2"></span>
                recent posts.
              </span>

              <span class="postList">
                <ul>
                  <li>Leg day for 2housr ㅁㅌㅊ<span class="postTime">
                    (18hours ago)
                  </span>
                  </li>
                </ul>
              </span>
            </div>

            <div class="profileDetailBox profileDetailBoxRightTop">
              <span class="profileBigText recentPosts-pos">
                <span class="text-style-1"><%=username%>'s</span>
                <span class="text-style-2"></span>
                Total Volums
              </span>
              <span class="totalVolumNum">
                1545684561<span class="text-style-1">kg</span>
              </span>
            </div>
        
            <div class="profileDetailBox profileDetailBoxRightBottom">
              <span class="profileBigText SBDRecord-pos">
                <span class="text-style-1"><%=username%>'s</span>
                <span class="text-style-2"></span>
                SBD Records
              </span>
              <span class="profileBigText Bench-pos">Bench Press<br>
                <span class="SBDkgText">200<span class="text-style-1">kg</span></span>
              </span>
              <span class="profileBigText Dead-pos">Dead Lift<br>
                <span class="SBDkgText">450<span class="text-style-1">kg</span></span>
              </span>
              <span class="profileBigText Squat-pos">Squat<br>
                <span class="SBDkgText">475<span class="text-style-1">kg</span></span>
              </span>
            </div>
        </div>
        
        

  





    </body>