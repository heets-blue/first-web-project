<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Meer - Beyond me</title>
    <link rel="favicon" href="/img/favicon.ico" type="image/x-icon" sizes="16x16">
    <link rel="stylesheet" href="/css/meer.css" type="text/css">
  </head>
  
  <body>
    <header>
      <div class="mainBarBg">
        
        <span class = 'mainHomeButton' type = "button" onclick="javascript:window.scrollTo(0,0)">
          <img class="mainLogo" src="img/mainLogo.png" alt="MainLogo">
          <span class="Meer">
            Meer
          </span>
        </span>
        <script>
          var page_url = window.localStorage.href;
          var page_id = page_url.substring(page_url.lastIndexOf('#') + 1)

          function menuCilck_About()
          {
            var aboutBlock = document.querySelectorAll(".aboutBlock")           
            window.scroll({top:aboutBlock[0].offsetTop, behavior: 'smooth'})
          }

          function menuCilck_Contact()
          {
            var contactBlock = document.querySelectorAll(".contactBlock")
            window.scroll({top:contactBlock[0].offsetTop - 62, behavior: 'smooth'})
          }

          if (page_id == 'contactBlock'){
            menuCilck_Contact()
          }

          else if (page_id == 'aboutBlock'){
            menuCilck_About()
          }
        </script>
        <button type = 'button' class="About" onclick="menuCilck_About()">
          About
        </button>
        <button type="button" class="Contact" onclick="menuCilck_Contact()">
          Contact
        </button>
        <button type="button" class="Community">
          Community
        </button>

        <script type='text/javascript'>
          function unloginedWorkout() {
            alert('Invalid Access or Login Required');
          }
        </script>

        <% if (logined == 'y') {%> 
        <button type="button" class="My-Workout" onclick="location.href='/workout/<%=id%>'" >
          My Workout
        </button>
        <% } else {%>
        <button type="button" class="My-Workout" onclick="unloginedWorkout()">
          My Workout
        </button>
        <% } %>

        <script type="text/javascript">
          function login() {
            location.href = '/login';
          }

          function logout() {
            location.href = '/logout';
          }

        </script>

        <% var logined %> 
        <% var id %> 
        <% if (logined == 'y'){%>
        <img class="profile_logo" type="button" src="<%=image%>" alt="profile" onclick="location.href = '/profile/<%=id%>'">
        <button type="button" class="loginButton" onclick="logout()">Logout</button>
        <% } else {%> 
        <button type="button" class="loginButton" onclick="login()">Login</button>
        <% } %> 
        
      
      </div>
    </header>

    <div class="topMainBlock">
      <div class="introBlock">
        <img class="homeImg" src="img/homeImg.jpg" alt="homeImg">
        <span class="Meer-makes-you">
        <span class="text-style-1">Meer</span>
        <span class="text-style-2"></span>
        makes you
        </span>
        <span class="Smarter-Stronger">
        Smarter, Stronger
        </span>
        <span class="and-Better">
        <span class="text-style-1">and</span>
        <span class="text-style-2">Better</span>
        </span>
      </div>
      
      <div class="aboutBlock" id="aboutBlock">
        <img class="mainLogo_About" src="img/mainLogo.png" alt="MainLogo">
        <span class="Meer2">
        Meer
        </span>
        <span class="Use-Meer-to-set-your-workout-goals-log-achievements-and-check-changes-also-share-them-with-others">
        Use Meer to set your workout goals, log achievements and check changes. 
        also share them with others!
        </span>
        <img class="firstAboutImg" src="img/plan.png" alt="About-plan">
        <img class="secAboutImg" src="img/memo_negative.png" alt="About-memo">
        <img class="thirdAboutImg" src="img/analysis_negative.png" alt="About-Analysis">
        <img class="forthAboutImg" src="img/share_negative.png" alt="About-share">

        <span class="Make-your-plan-easyliy">
          Make your plan easyliy!
        </span>
        <span class="Log-your-achievement">
          Log your achievement!
        </span>
        <span class="Analysis-your-workout">
          Analysis your workout
        </span>
        <span class="Share-them">
          Share them!
        </span>
      </div>

    </div>

    <div class="contactBlock" id="contactBlock">
      <img class="mainLogo_Contact" src="img/mainLogo.png" alt="MainLogo">
      <span class="Meer3">
        Meer
      </span>
      <span class="Wed-love-to-hear-from-you">
        We’d love to<br>
      hear from you
      </span>
      <div class="contactCircles">
        <div class="firstCircle"></div>
        <div class="secondCircle">
          <img class="secondCircleImg" src="img/dottedCircle.png" alt="dottedCircle">
        </div>
        <div class="thirdCircle"></div>
        <div class="contactSide">
          <span class="Contact-us">
            Contact us
          </span>

          <span id="FIRSTNAME_Text" class="contactMainTexts contactMaintextsLoc1">
            FIRST NAME
          </span>
          
          <span id="LASTNAME_Text"class="contactMainTexts contactMaintextsLoc2">
            LAST NAME
          </span>

          <span id="EMAIL_Text"class="contactMainTexts contactMaintextsLoc3">
            EMAIL
          </span>

          <span id="PHONE_Text"class="contactMainTexts contactMaintextsLoc4">
            PHONE NUMBER
          </span>

          <span id="MESSAGE_Text" class="contactMainTexts contactMaintextsLoc5">
            MESSAGE
          </span>
          
          <span class="EMAIL-US">
            EMAIL US
          </span>

          <span class="enquiriesmeercom">
            enquiries@meer.com
          </span>

          <script language="javascript">
            function submitConfirm(){              
              var contactForm = document.contactForm;            
              var contact_inputs = {
                
                FIRSTNAME : document.getElementById('FIRSTNAME').value.length,
                LASTNAME : document.getElementById('LASTNAME').value.length,
                EMAIL : document.getElementById('EMAIL').value.length,
                MESSAGE : document.getElementById('MESSAGE').value.length
                
              }
              var inputs = ['FIRSTNAME', 'LASTNAME', 'EMAIL', 'MESSAGE']
              var init_Text = ['FIRSTNAME_Text', 'LASTNAME_Text', 'EMAIL_Text', 'MESSAGE_Text']
              for(let i =0; i < inputs.length; i++) {
                  
                  var line = document.getElementById(inputs[i])
                  var text = document.getElementById(init_Text[i])
                  
                  
                  line.style.borderBottomColor ="black";
                  text.style.color = "black";
              }

              var mainTexts = []
              var zeroInputs = []

              for(input in contact_inputs) {
                if (contact_inputs[input] == 0) {
                  zeroInputs.push(input)
                  mainTexts.push(input+"_Text")
                }
                else {     
                }
              }

              var alertText = "";
             
              for(let i=0; i<zeroInputs.length; i++) {
                if (i > 0) {
                  alertText += ", " + zeroInputs[i]; 
                }  
                if (i==0) {
                  alertText += zeroInputs[i]
                }                
              }
              if (zeroInputs.length == 0) {               
                alert('Thank you for contacting us.\nYour submission has been sent!\nWe will reqly to your email as soon as possible.');
                contactForm.submit();
                // location.reload();
              }
              else{               
                for(let i =0; i < zeroInputs.length; i++) {
                  
                  var line = document.getElementById(zeroInputs[i])
                  var text = document.getElementById(mainTexts[i])
                  
                  
                  line.style.borderBottomColor ="red";
                  text.style.color = "red";
                }
                alert(alertText+" must be filled")               
              }              
            }
            
          </script>
          <form method="post" name="contactForm" action="/" onkeydown="return event.key != 'Enter';">
            <input type="text" id="FIRSTNAME" class="contactInput contactInputLoc1" placeholder="Enter your first name" name="firstname"/>            
            <input type="text" id="LASTNAME" class="contactInput contactInputLoc2" placeholder="Enter your last name" name="lastname"/>
            <input type="email" id="EMAIL" class="contactInput contactInputLoc3" placeholder="Enter your email address" name="email"/>                  
            <input type="text" id="PHONE" class="contactInput contactInputLoc4" placeholder="Enter your phone number" name="phone"/>
            <input type="text" id="MESSAGE" class="contactInput contactInputLoc5" placeholder="Enter your message" name="message"/>    
            <button type="button" id="contactSubmitButton"class="contactSubmit" value="submin_contact" onclick="submitConfirm();" >
              Submit →
            </button>
          </form>
        </div>
      </div>      
  <img class="mainBackground" src="img/MainBackGround003.png" alt="BackGroundimg"> 
  </body>
</html>