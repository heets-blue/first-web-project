<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Meer</title>
    
    <link rel="stylesheet" href="/css/meer.css" type="text/css">
    
  </head>
    <body style="background-color: white;">
      <header>
        <div class="mainBarBg" style="background-color: black;">
          
          <span class = 'mainHomeButton' type = "button" onclick="location.href='/'">
            <img class="mainLogo" src="/img/mainLogo.png" alt="MainLogo">
            <span class="Meer">
              Meer
            </span>
          </span>
          <script>
            function menuCilck_About()
            {
                location.href='/#aboutBlock'
            }
  
            function menuCilck_Contact()
            {
                location.href='/#contactBlock'
            }
            
          </script>
          <button type = 'button' class="About" onclick="menuCilck_About()">
            About
          </button>
          <button type="button" class="Contact" onclick="menuCilck_Contact()">
            Contact
          </button>
          <button type="button" class="Community">
            Community
          </button>
          <button type="button" class="My-Workout" onclick="location.href='/workout/<%=id%>'" >
            My Workout
          </button>
           
          <script type="text/javascript">
            function login() {
              location.href = '/login';
            }
  
            function logout() {
              location.href = '/logout';
            }

            function editProfile() {
              location.href = '/profile/edit/<%id%>'
            }
          </script>
          <% var logined %> 
          <% var id %> 
          <% if (logined == 'y'){%>
          <img class="profile_logo" type="button" src="<%=smallimage%>" alt="profile" onclick="location.href = '/profile/<%=myid%>'">
          <button type="button" class="loginButton" onclick=logout()>Logout</button>
          <% } else {%> 
          <button type="button" class="loginButton" onclick=login()>Login</button>
          <% } %> 
        </div>
    </header>

    <div class="workoutSideBar">
      <div class="workoutLogBut" type="button">
        <img src="/img/dumbbell.png" class="workoutLogImg">
        <span class="workoutSideText">
          Workout
        </span>
      </div>
      <div class="analysisBut" type="button">
        <img src="/img/analysis2.png" class="workoutLogImg">
        <span class="workoutSideText">
          Analysis
        </span>
      </div>
      <div class="progressBut" type="button">
        <img src="/img/bicep.png" class="workoutLogImg">
        <span class="workoutSideText">
          Progress
        </span>
      </div>
      <div class="planBut" type="button">
        <img src="/img/calendar2.png" class="workoutLogImg">
        <span class="workoutSideText">
          Plan
        </span>
      </div>
    </div> 
    <div class="workoutsFrame">
      <div class="workoutLine"></div>
      <div class="workoutsTopBar">
        <button class="workoutCategoryBut chestButLoc">Chest</button>
        <button class="workoutCategoryBut backButLoc">Back</button>
        <button class="workoutCategoryBut shoulderButLoc">Shoulder</button>
        <button class="workoutCategoryBut legsButLoc">Legs</button>
        <button class="workoutCategoryBut armsButLoc">Arms</button>
        <button class="workoutCategoryBut absButLoc">Abs</button>
        <button class="workoutCategoryBut cadioButLoc">Cadio</button>
        <button class="workoutCategoryBut etcButLoc">etc</button>

        <input class="researchWorkouts" placeholder="Search">
        <img src="/img/search.png" class="searchImg">
        <img src="/img/bookmark.png" class="bookmarkWorkoutBut" type="button">

        <div class="addCategoryDiv" type="button">
          <img src="/img/plus2.png" class="addCategoryImg">
          <span class="addCategoryText" style="text-decoration: underline; text-underline-position:under;">
            Add Category
          </span>
        </div>
      </div>

      <div class="workoutsShowFrame">

    <div class="workoutMakeRoutien">
      
    </div>

    </div>

    <div class="workoutBottonBar">
      <img src="/img/candelarArror.png" class="arrow" type="button">
      <img src="/img/candelarArror.png" class="arrow2" type="button">
      <img src="/img/calendar.png" class="canlenar" type="button">
    </div>


    </body>